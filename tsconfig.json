{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2018",
        "module": "ES6",
        "newLine": "lf",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "noResolve": false
    },
    "include": [
        "src/**/*"
    ]
}